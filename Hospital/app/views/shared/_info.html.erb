<div class="content w1200 layout">
      <hr />
                <div class="mb50 layout">
                    <div class="fl w1200 gdl_con">
                        <div class="layout">
                            <h2>华人资讯</h2>
                            <div class="fl gdl_tab ">
                                <ul id="group_li">
                                    <li class="cur" item="5"><a href="javascript:void(0);">医疗信息</a><i class="line">｜</i></li>
                                    <li item="1"><a href="javascript:void(0);">名医文章</a><i class="line">｜</i></li>
                                    <li item="2"><a href="javascript:void(0);">典型病例</a><i class="line">｜</i></li>
                                </ul>
                            </div>
                            <a href="" class="fr more ">
                                <span>进入华人资讯</span>
                                <i class="more_i g_icon"></i>
                            </a>
                        </div>
                        <div class="layout com_list">
                            <ul id="forum_list">
                             <% @docs.each do |doc| %>
                               <li>
                               <i class="dot">◆</i>
                               <p class="word_hid">
                                <a href="<%=doc["url"]%>" class="fs14" title="<%=doc["title"]%>"><%=doc["title"]%></a>
                               </p><span class="fr gray_2 word_hid " title="">
                                <i class="g_icon male"></i>"<%=doc["author"]%></span>
                                </li>
                              <% end %>
                           </ul>
                        </div>
                    </div>
                    <div class="fr w280">
                    </div>
                </div>
            </div>
<% content_for :template_js do %>
<script>
    $("#group_li li").click(function() {
        $("#group_li li").removeClass("cur");
        $(this).addClass("cur");
        cno = $(this).attr('item');
        forumList(cno);
    });
    function forumList(cno) {
    url = JYUrl('ajax', 'getForumByCategory'),
    $.post(url, {
        cid: cno,
        num: 14
    },
    function(result) {
        html = '';
        $.each(result,
        function(i, doc) {
            var url = JYUrl("forum", "detail", {
                id: doc.forum_id
            });
            html += '<li><i class="dot">◆</i>';
            html += '<p class="word_hid"><a href="' + doc.url + '" class="fs14" title="' + doc.title + '">' + doc.title + '</a></p>';
            html += '<span class="fr gray_2 word_hid " title="' + doc.author + '">';
            if (doc.sex) {
                html += '<i class="g_icon female"></i>';
            } else {
                html += '<i class="g_icon male"></i>';
            }
            html += doc.author + '</span></li>';
        });
        $("#forum_list").html(html);
    },
    'json');
}
  </script>
<% end %>
